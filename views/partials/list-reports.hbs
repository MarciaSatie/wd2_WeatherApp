

<table class="table is-fullwidth">
  {{>station-detail}}

  <thead>
    <tr>
      <th>Date</th>
      <th>Code</th>
      <th>Temperature</th>
      <th>Wind Speed</th>
      <th>Wind Direction</th>
      <th>Pressure</th>
    </tr>
  </thead>
  <tbody>
    {{#each reports}}
    <tr>
        <td>
          {{date}}
        </td>
        <td>
         {{code}}
        </td>
        <td>
         {{temperature}}
        </td>
        <td>
         {{windSpeed}}
        </td>
        <td>
         {{windDirection}}  
        </td>
        <td>
         {{pressure}}            
        </td> 
        <td>
          <form action="/station/{{_id}}/deleteReport/{{_id}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this Report?');">
            <button type="submit" style="background:none; border:none; padding:0;">
              <img src="/images/bin.png" alt="Delete {{title}}" class="bin" style="width: 30px; cursor: pointer;">
            </button>
          </form> 
        </td>
    </tr>

    {{/each}}
  </tbody>
</table>

