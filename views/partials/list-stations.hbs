{{#each stations}}
<div class="box box-link-hover-shadow">
  <h2 class="title">
    <a href="/station/{{_id}}">
      {{>dashboard-station-detail}}
    </a>
  </h2>
  <div class="columns">
    <div class="column is-2">
      
      <form action="/station/{{_id}}/deleteStation" method="POST" onsubmit="return confirm('Are you sure you want to delete this station?');">
        <button type="submit" style="background:none; border:none; padding:0;">
          <img src="/images/bin.png" alt="Delete {{title}}" class="bin" style="width: 50px; cursor: pointer;">
        </button>
      </form>
    </div>
  </div>
</div>
{{/each}}
